{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@company/*": [
        "libs/*",
        "libs/*/src/public-api.ts"
      ],
      "@examples/*/testing": [
        "libs/*-examples/testing"
      ],
      "@examples/*": [
        "libs/*-examples",
        "libs/*-examples/src/public-api.ts"
      ],
      "@ptoh-web/testing": [
        "apps/ptoh-web/testing"
      ],
      "@demo-app/testing": [
        "apps/demo/testing"
      ]
    }
  }
}
